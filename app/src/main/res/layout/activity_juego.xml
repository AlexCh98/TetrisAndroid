    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="443dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="213dp"
            android:layout_height="426dp">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cuadrado" />

            <TextView
                android:id="@+id/puntuacion"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="Ptos: 0" />

            <TextView
                android:id="@+id/Cronometro"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="0" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="0.6"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <include layout="@layout/button_rotate_left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <include layout="@layout/button_pause" />

            <include layout="@layout/button_soft_drop" />

            <include layout="@layout/button_hard_drop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <include layout="@layout/button_left" />

            <include layout="@layout/button_right" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
